<MudAppBar Class="justify-content-center pt-2" Fixed="false" Color="Color.Transparent" Elevation="0">
    <MudLink Href="/" Underline="Underline.None">
        <MudImage Src="/assets/dragonfruit.png" Height="48"/>
    </MudLink>

    <MudDivider Vertical="true" FlexItem="true" Style="margin: auto 1rem; height: 50%"/>

    @* main product links *@
    <MudStack Row="true" Spacing="2">
        <MudButton Variant="Variant.Text" Href="/">Home</MudButton>
        <MudButton Variant="Variant.Text" Href="/onionfruit">OnionFruit&trade;</MudButton>
        <MudButton Variant="Variant.Text" Href="/dragon6">Dragon6</MudButton>
    </MudStack>

    <MudSpacer/>

    @* external links *@
    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
        <MudTooltip Text="Discord">
            <MudIconButton Target="_blank"
                           Size="Size.Medium"
                           Color="Color.Inherit"
                           Icon="fa-brands fa-discord"
                           Href="https://discord.gg/mcYJQNe"/>
        </MudTooltip>
        <MudTooltip Text="GitHub">
            <MudIconButton Target="_blank"
                           Size="Size.Medium"
                           Color="Color.Inherit"
                           Icon="@Icons.Custom.Brands.GitHub"
                           Href="https://github.com/dragonfruitnetwork"/>
        </MudTooltip>
        <MudTooltip Text="Email">
            <MudIconButton Size="Size.Medium"
                           Color="Color.Inherit"
                           Icon="@Icons.Rounded.Email"
                           Href="mailto:inbox@dragonfruit.network"/>
        </MudTooltip>
        <MudTooltip Text="Account">
            <MudIconButton Target="_blank"
                           Size="Size.Medium"
                           Color="Color.Inherit"
                           Icon="@Icons.Rounded.AccountCircle"
                           Href="https://id.dragonfruit.network"/>
        </MudTooltip>
    </MudHidden>
</MudAppBar>