<MudItem xs="12" md="6" lg="4">
    <SakuraSubheading Text="@Title" Colour="@Colour" Icon="@Icon"/>
    <MudText>
        @ChildContent
    </MudText>
</MudItem>

@code {

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Colour { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}